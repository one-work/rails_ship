<td><%= link_to model.uuid, { action: 'show', id: model.id } %></td>
<td><%= model.amount %></td>
<td>
  <span><%= model.payment_status_i18n %></span>
  <%= link_to({ action: 'payment_types', id: model.id }, class: 'button is-small') do %>
    <span>支付</span>
  <% end if model.can_pay? %>
</td>
<td>
  <span><%= model.note %></span>
  <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'ml-1') do %>
    <%= svg_tag 'pencil' %>
  <% end %>
</td>
<td><%= model.items_count %></td>
<td><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></td>
