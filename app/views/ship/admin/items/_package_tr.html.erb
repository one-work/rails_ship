<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <button class="button is-small is-borderless" data-controller="print" data-print-url-value="<%= url_for(controller: 'packages', action: 'pdf', id: model.id) %>" data-action="print#doPrint">
        <%= svg_tag 'print' %>
      </button>
      <%= link_to({ controller: 'packages', action: 'show', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'eye', class: 'icon text-info' %>
      <% end %>
      <%= link_to({ controller: 'packages', action: 'edit', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'pencil' %>
      <% end %>
      <%= button_to({ controller: 'packages', action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, class: 'button is-small is-borderless', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
        <%= svg_tag 'trash' %>
      <% end %>
    </div>
  </td>
</tr>
