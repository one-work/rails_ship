<tr id="tr_<%= model[0].id %>" data-controller="show">

  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ action: 'show', id: model[0].id }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'eye', class: 'icon text-info' %>
      <% end %>
      <%= link_to({ controller: 'packages', action: 'address', address_id: model[0].id }, aria: { label: t('ship.admin.packages.index.title') }, class: 'button is-small is-borderless') do %>
        <i class="fa-regular fa-box"></i>
      <% end %>
      <%= button_to({ action: 'edit', id: model[0].id }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'pencil' %>
      <% end %>
    </div>
  </td>

