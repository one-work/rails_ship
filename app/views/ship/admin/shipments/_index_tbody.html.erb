<td><%= model.load_on %></td>
<td>
  <p><%= model.car.number %></p>
  <p><%= model.driver.name %></p>
</td>
<td>
  <p><%= model.current_line_station.station.name if model.current_line_station %></p>
  <p><span class="tag"><%= model.state_i18n %></span></p>
</td>
<td>
  <p><time data-controller="time"><%= model.left_at&.to_fs(:iso8601) %></time></p>
  <p><time data-controller="time"><%= model.arrived_at&.to_fs(:iso8601) %></time></p>
</td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= link_to({ action: 'stations', id: model.id }, aria: { label: t('ship.admin.shipments.stations.title') }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-location-dot"></i>
    <% end %>
    <%= link_to({ controller: 'shipment_items', shipment_id: model.id }, aria: { label: t('ship.admin.shipment_items.index.title') }, class: 'button is-small is-borderless') do %>
      <i class="fa-regular fa-list-check"></i>
    <% end %>
    <%= link_to({ controller: 'shipment_logs', shipment_id: model.id }, aria: { label: t('ship.admin.shipment_logs.index.title') }, class: 'button is-small is-borderless') do %>
      <i class="fa-regular fa-clock-rotate-left"></i>
    <% end %>
    <%= button_to({ action: 'leave', id: model.id }, data: { turbo_frame: 'modal' }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-play"></i>
      <span class="pl-1"><%= t('ship.admin.shipments.leave.title') %></span>
    <% end if ['preparing', 'prepared', 'arrived'].exclude?(model.state) %>
    <%= button_to({ action: 'arrive', id: model.id }, data: { turbo_frame: 'modal' }, class: 'button is-small is-borderless') do %>
      <i class="fa-solid fa-stop"></i>
      <span class="pl-1"><%= t('ship.admin.shipments.arrive.title') %></span>
    <% end if model.state == 'left' %>
    <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'circle-info', class: 'icon text-info' %>
    <% end %>
    <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'pencil' %>
    <% end if model.organ_id == current_organ.id %>
    <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, class: 'button is-small is-borderless', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
      <%= svg_tag 'trash' %>
    <% end if model.organ_id == current_organ.id %>
  </div>
</td>