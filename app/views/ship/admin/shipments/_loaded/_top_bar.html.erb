<div class="box as-bar">
  <% if params[:from] == 'station' %>
    <%= link_to({ controller: 'stations', action: 'shipments', id: params[:from_station_id] }, class: 'px-4') do %>
      <%= svg_tag 'angle-left' %>
    <% end %>
  <% else %>
    <%= link_to({ action: 'stations' }, class: 'px-4') do %>
      <%= svg_tag 'angle-left' %>
    <% end %>
  <% end %>
  <div class="weui-title">
    <i class="fa-solid fa-person-dolly text-success"></i>
    <span class="pl-1"><%= t('.title') %></span>
  </div>
  <i class="px-5"></i>
</div>
