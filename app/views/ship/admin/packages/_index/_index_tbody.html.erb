<td>
  <p>
    <span><%= model.from_address&.content %></span>
    <span class="tag is-success"><%= model.from_station&.name %></span>
  </p>
  <p>
    <span><%= model.address&.content %></span>
    <span class="tag is-danger"><%= model.station&.name %></span>
  </p>
</td>
<td>
  <%= link_to({ action: 'shipment_items', id: model.id }, data: { turbo_frame: 'modal' }, class: 'tag') do %>
    <i class="fa-solid fa-person-dolly text-success"></i>
    <span class="pl-1"><%= model.state_i18n %></span>
    <span class="pl-1"><%= model.shipment_items_count %></span>
  <% end %>
</td>
<td>
  <p><%= model.box&.code %></p>
  <p class="text-info-dark"><time data-controller="time"><%= model.boxed_in_at&.to_fs(:iso8601) %></time></p>
  <p class="text-warning-dark"><time data-controller="time"><%= model.boxed_out_at&.to_fs(:iso8601) %></time></p>
</td>
<td>
  <%= link_to({ controller: 'packageds', package_id: model.id }, class: 'tag') do %>
    <i class="fa-solid fa-list"></i>
    <span class="pl-1"><%= model.packageds_count %></span>
  <% end %>
</td>
<td>
  <p><%= model.expected_on %></p>
  <p class="text-grey"><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></p>
</td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <button class="button is-small is-borderless" data-controller="print" data-print-url-value="<%= url_for(action: 'pdf', id: model.id) %>" data-action="print#doPrint">
      <i class="fa-solid fa-print text-danger"></i>
    </button>
    <%= link_to({ action: 'show', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'circle-info', class: 'icon text-info' %>
    <% end %>
    <%= link_to({ action: 'edit', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'pencil', class: 'icon text-link' %>
    <% end %>
    <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, class: 'button is-small is-borderless', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
      <%= svg_tag 'trash', class: 'icon text-danger' %>
    <% end %>
  </div>
</td>
