<%= button_to({ action: 'destroy', id: model.id }, method: :delete, form: { data: { turbo_confirm: t('.destroy.confirm') } }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'trash' %>
  <span><%= t('.destroy.title') %></span>
<% end %>
<%= button_to({ action: 'edit', id: model.id }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'pencil' %>
  <span><%= t('.edit.title') %></span>
<% end %>
<%= link_to({ action: 'show', id: model.id }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'eye' %>
  <span><%= t('.show.title') %></span>
<% end %>
<%= link_to({ action: 'shipment_items', id: model.id }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'person-dolly' %>
  <span class="pl-1"><%= model.state_i18n %></span>
  <span class="pl-1"><%= model.shipment_items_count %></span>
<% end %>
<%= link_to({ controller: 'packageds', package_id: model.id }, class: 'cell has-column-centered') do %>
  <%= svg_tag 'list' %>
  <span><%= model.packageds_count %></span>
<% end %>
