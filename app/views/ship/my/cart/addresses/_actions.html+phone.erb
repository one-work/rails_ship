<%= button_to({ action: 'destroy', id: model.id }, method: :delete, class: 'text-danger', form: { data: { turbo_confirm: t('.destroy.confirm') }, class: 'cell weui-actionsheet__cell_warn' }) do %>
  <%= svg_tag 'trash' %>
  <span><%= t('.destroy.title') %></span>
<% end %>
<%= button_to({ action: 'edit', id: model.id }, class: 'cell') do %>
  <%= svg_tag 'pencil' %>
  <span><%= t('.edit.title') %></span>
<% end %>
<%= link_to({ action: 'show', id: model.id }, class: 'cell') do %>
  <%= svg_tag 'circle-info', class: 'icon text-info' %>
  <span><%= t('.show.title') %></span>
<% end %>
<%= link_to({ controller: 'packages', address_id: model.id }, class: 'cell') do %>
  <%= svg_tag 'circle-info', class: 'icon text-info' %>
  <span><%= t('ship.my.packages.index.title') %></span>
<% end %>
